<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo4.controllers.TemporaryRecordController">

    <!-- Top: Filter và Search -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Loại:"/>
            <ComboBox fx:id="cbFilterType" prefWidth="120"/>
            <Label text="Trạng thái:"/>
            <ComboBox fx:id="cbFilterStatus" prefWidth="150"/>
            <Label text="Tìm công dân:"/>
            <TextField fx:id="tfSearchCitizen" promptText="Nhập tên công dân"/>
            <Button text="Lọc" onAction="#applyFilter"/>
            <Button text="Reset" onAction="#resetFilter"/>
        </HBox>
    </top>

    <!-- Center: Table -->
    <center>
        <TableView fx:id="table" prefHeight="400" prefWidth="800">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colCitizenName" text="Công dân" prefWidth="150"/>
                <TableColumn fx:id="colType" text="Loại" prefWidth="100"/>
                <TableColumn fx:id="colStartDate" text="Từ ngày" prefWidth="100"/>
                <TableColumn fx:id="colEndDate" text="Đến ngày" prefWidth="100"/>
                <TableColumn fx:id="colLocation" text="Địa điểm" prefWidth="150"/>
                <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Thêm" onAction="#addRecord"/>
            <Button text="Xem chi tiết" onAction="#viewDetails"/>
            <Button text="Xóa" onAction="#deleteRecord"/>
            <Button text="Làm mới" onAction="#refresh"/>
            <Button text="Đóng" onAction="#close"/>
        </HBox>
    </bottom>

</BorderPane>
